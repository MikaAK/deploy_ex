variable "environment" {
  description = "Name of the project in kebab case for use in names"
  type        = string
  default     = "<%= @environment %>"
}

variable "project_name" {
  description = "Name of the project in kebab case for use in names"
  type        = string
  default     = "<%= @app_name %>"
}

variable "resource_group" {
  description = "Value of the Group tag for all resources"
  type        = string
  default     = "<%= DeployExHelpers.upper_title_case(@app_name) %> Backend"
}

variable "logging_bucket_name" {
  description = "Logging bucket name to use for storing built loggings"
  type        = string
  default     = "<%= @logging_bucket_name %>"
}

variable "logging_bucket_title_name" {
  description = "Ditto as above but as title case"
  type        = string
  default     = "<%= DeployExHelpers.upper_title_case(@logging_bucket_name) %>"
}

variable "release_bucket_name" {
  description = "Release bucket name to use for storing built releases"
  type        = string
  default     = "<%= @release_bucket_name %>"
}

variable "release_bucket_title_name" {
  description = "Ditto as above but as title case"
  type        = string
  default     = "<%= DeployExHelpers.upper_title_case(@release_bucket_name) %>"
}

variable "<%= @app_name %>_project" {
  description = "Map of project names to configuration."
  type        = map(any)

  default = {
<%= @terraform_loki_variables %>
<%= @terraform_prometheus_variables %>
<%= @terraform_release_variables %>
  }
}
